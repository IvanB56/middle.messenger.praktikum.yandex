{
  "name": "my_messenger",
  "version": "1.0.0",
  "description": "My Messenger",
  "scripts": {
    "test": "jest",
    "build": "webpack --mode=production --node-env=production",
    "start": "npm run build:dev && node server.js",
    "lint:ts": "eslint --fix --config=./.eslintrc.js .",
    "lint:css": "npx stylelint --fix ./src/**/*.css",
    "lint:all": "npm run lint:ts && npm run lint:css",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve",
    "precommit": "npm run lint:all",
    "prepush": "npm run lint:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "18.11.17",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@webpack-cli/generators": "3.0.1",
    "css-loader": "6.7.3",
    "cssnano": "4.1.11",
    "eslint": "8.29.0",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "^5.5.0",
    "husky": "8.0.3",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "less": "4.1.3",
    "less-loader": "11.1.0",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss-less": "6.0.0",
    "prettier": "2.7.1",
    "style-loader": "^3.3.1",
    "stylelint": "14.16.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard": "29.0.0",
    "ts-loader": "9.4.2",
    "typescript": "4.9.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": "8.11.0"
  },
  "dependencies": {
    "express": "4.18.2",
    "nanoid": "4.0.0"
  },
  "staticFiles": {
    "staticPath": [
      "./src/static",
      "_redirects"
    ],
    "watcherGlob": "**"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint:all"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|js)$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^core(.*)$": "<rootDir>/src/core$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^services(.*)$": "<rootDir>/src/services$1",
      "^utils(.*)$": "<rootDir>/src/utils$1"
    }
  }
}
