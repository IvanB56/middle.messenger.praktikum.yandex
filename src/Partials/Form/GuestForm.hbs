<div class="form-inner">
    <div class="form-inner-header">
        <h2>{{ title }}</h2>
    </div>
    <div class="form-inner-body">
        <form>
            {{#each data}}
                {{> "UI/FormInput/FormInput" placeholder=this.placeholder type=this.type name=this.name}}
            {{/each}}

            {{#if regButton}}
                <div class="registration">
                    <a href="../Registration/Registration.hbs">Ещё не зарегистрированы?</a>
                </div>
            {{/if}}

            {{> "UI/FormButton/FormButton" body=formButtonText}}
        </form>
    </div>
</div>
