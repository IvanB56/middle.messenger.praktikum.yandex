    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "typings/app.d.ts"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "exclude": [
